{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": { "#src/*": ["src/*"] }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".turbo", "dist", "src/**/*.test.ts"]
}
